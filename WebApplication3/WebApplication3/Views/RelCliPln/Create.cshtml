@model WebApplication3.Models.RelCliPln

@{
    ViewBag.Title = "Home Page";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Planes Cliente</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.IDCLIENTE, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.IDCLIENTE, new SelectList(ViewBag.Clientes, "IDCLIENTE", "NOMBRE"))
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PLANES, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.IDPLAN, new SelectList(ViewBag.planes, "IDPLAN", "DESCRIPCION"))
        </div>
    </div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Registrar" class="btn btn-default" />
        </div>
    </div>
</div>
        }

        <div>
            @Html.ActionLink("Regresar a la lista", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
